PROGRAM funkcniblokcitac_p
  VAR_INPUT
  END_VAR
  VAR_OUTPUT
  END_VAR
  VAR
    citac : CTUD;
    generator : TON;
    impulzy : BOOL;
    cas : TIME;
    max : BOOL;
    min : BOOL;
    hodnota : INT;
    preklop : BOOL;
  END_VAR
  VAR_TEMP
  END_VAR
{NOCODE}
(*
  Komentáø ke schématu
*)

{NETWORK}
(*
Generator 1Hz impulzu

1
___|___|___|___|__
0
*)
  LD_BOOL   "s1"
  ANDN      "impulzy"
  {POU:TON} "generator"
    {PIN:IN} {/PIN}
    {PIN:PT} "T#1s" {/PIN}
    {PINO:Q} {/PIN}
    {PINO:ET} "cas" {/PIN}
  {/POU}
  ST        "impulzy"
{/NETWORK}

{NETWORK}
(*
  Komentáø k obvodu
*)
  LD_BOOL   "s2"
  AND       "impulzy"
  ANDN      "preklop"
  {POU:CTUD} "citac"
    {PIN:CU} {/PIN}
    {PIN:CD}
      LD_BOOL   "s2"
      AND       "impulzy"
      AND       "preklop"
    {/PIN}
    {PIN:R}
      LD_BOOL   "s3"
      OR        "max"
    {/PIN}
    {PIN:LD}
      LD_BOOL   "s5"
    {/PIN}
    {PIN:PV} "10" {/PIN}
    {PINO:QU} {/PIN}
    {PINO:QD} "min" {/PIN}
    {PINO:CV} "hodnota" {/PIN}
  {/POU}
  ST        "max"
{/NETWORK}

{NETWORK}
(*

*)
  LD_BOOL   "max"
  OR        "preklop"
  ANDN      "min"
  ST        "preklop"
{/NETWORK}


{/NOCODE}
{ILCODE}
(* Network 1 *)
(* 31 *)    LD_BOOL   s1
(* 32 *)    ANDN      impulzy
(* 34 *)    ST        generator.IN
(* 33 *)    CAL generator (PT:=T#1s)
(* 37 *)    LD        generator.ET
(* 37 *)    ST        cas
(* 36 *)    LD        generator.Q
(* 39 *)    ST        impulzy
(* Network 2 *)
(* 46 *)    LD_BOOL   s2
(* 47 *)    AND       impulzy
(* 48 *)    ANDN      preklop
{CREATE_TEMP=__Tmp_1}
(* 49 *)    ST        __Tmp_1
(* 52 *)    LD_BOOL   s2
(* 53 *)    AND       impulzy
(* 54 *)    AND       preklop
{CREATE_TEMP=__Tmp_2}
(* 51 *)    ST        __Tmp_2
(* 57 *)    LD_BOOL   s3
(* 58 *)    OR        max
{CREATE_TEMP=__Tmp_3}
(* 56 *)    ST        __Tmp_3
(* 49 *)    CAL citac (CU:=__Tmp_1,CD:=__Tmp_2,R:=__Tmp_3,LD:=s5,PV:=10)
(* 65 *)    LD        citac.QD
(* 65 *)    ST        min
(* 66 *)    LD        citac.CV
(* 66 *)    ST        hodnota
(* 64 *)    LD        citac.QU
(* 68 *)    ST        max
(* Network 3 *)
(* 75 *)    LD_BOOL   max
(* 76 *)    OR        preklop
(* 77 *)    ANDN      min
(* 78 *)    ST        preklop
END_PROGRAM
