PROGRAM krizovatka_p
  VAR_INPUT
  END_VAR
  VAR_OUTPUT
  END_VAR
  VAR
    blikani : BOOL;
    generator : TON;
    zpozdovac : TOF;
    prepinani : BOOL;
    generator2 : TON;
    zpozdovac2 : TOF;
    casB2 : TIME;
    casB1 : TIME;
    casA1 : TIME;
    casA2 : TIME;
    prepinac : BOOL;
    zpozdovac3 : TOF;
    casC1 : TIME;
  END_VAR
  VAR_TEMP
  END_VAR
{NOCODE}
(*
  Komentáø ke schématu
*)

{NETWORK}
(*
Trvale cervena pro oba smery
*)
  LD_BOOL   "S1"
  ST        "CAB"
  ST        "CCD"
{/NETWORK}

{NETWORK}
(*
Blikajici 1Hz oranzova pro oba smery
*)
  LD_BOOL   "S2"
  ANDN      "blikani"
  {POU:TON} "generator"
    {PIN:IN} {/PIN}
    {PIN:PT} "T#1s" {/PIN}
    {PINO:Q} {/PIN}
    {PINO:ET} "casA1" {/PIN}
  {/POU}
  ST        "blikani"
  {POU:TOF} "zpozdovac"
    {PIN:IN} {/PIN}
    {PIN:PT} "T#0.5s" {/PIN}
    {PINO:Q} {/PIN}
    {PINO:ET} "casA2" {/PIN}
  {/POU}
  ST        "OOBA"
{/NETWORK}

{NETWORK}
(*
Stridajici se zelena/cervena po 20s menici smery
*)
  LD_BOOL   "S3"
  ANDN      "prepinani"
  {POU:TON} "generator2"
    {PIN:IN} {/PIN}
    {PIN:PT} "T#10s" {/PIN}
    {PINO:Q} {/PIN}
    {PINO:ET} "casB1" {/PIN}
  {/POU}
  ST        "prepinani"
  {POU:TOF} "zpozdovac2"
    {PIN:IN} {/PIN}
    {PIN:PT} "T#5s" {/PIN}
    {PINO:Q} {/PIN}
    {PINO:ET} "casB2" {/PIN}
  {/POU}
  ST        "prepinac"
{/NETWORK}

{NETWORK}
(*

*)
  LD_BOOL   "S3"
  AND       "prepinac"
  ST        "ZAB"
  ST        "CCD"
{/NETWORK}

{NETWORK}
(*

*)
  LD_BOOL   "S3"
  ANDN      "prepinac"
  ST        "ZCD"
  ST        "CAB"
{/NETWORK}


{/NOCODE}
